<GeradorWidget>:
    #### Layout Geral ####
    BoxLayout:
        orientation: 'vertical'
        padding: 40, 5, 40, 5
        spacing: 5
        size: root.width, root.height
        canvas:
            Color:
                rgb: (1, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        
        #### Imagem Inicial - 1 Bloco do Box Layout ####
        Image:
            source: 'logo_gerador.png'
            size_hint: (1, 0.8)
            size: self.texture_size
            
            canvas:
                Color:
                    rgb: (1, 1, 1)
                Rectangle:
                    texture: self.texture
                    size: self.width, self.height
                    pos: self.x, self.y

        #### Sessão de interação - 2 Bloco do Box Layout ####
        GridLayout:
            cols: 3
            rows: 1
            size_hint: (1, 0.3)

            Label:
                text:'Digite o tamanho da senha:'
                font_size: 20
                size_hint: (0.7, 1)
                color: (28/255, 48/255, 72/255, 1)
                            
            TextInput:
                id: valor_senha
                text: '0'
                font_size: 20
                multiline: False
                size_hint: (0.13, 1)
                background_normal: ''
                background_color: (1, 1, 1, 1)
                foreground_color: (0, 0, 0, 1)

            Button:
                text: 'Gerar Senha'
                font_size: 20
                size_hint: (0.4, 1)
                background_normal: ''
                background_color: (28/255, 48/255, 72/255, 1)
                color: (1, 1, 1, 1)
                on_press: root.gerar()

        #### Senhas Geradas - 3 Bloco do Box Layout ####
        GridLayout:
            cols: 2
            rows: 1
            
            Label:
                text: 'Senha Gerada:'
                font_size: 20
                color: (28/255, 48/255, 72/255, 1)
                size_hint: (0.3, 0.5)
            
            TextInput:
                id: imprime_senha
                text: ''
                font_size: 17
                size_hint: (0.5, 0.5)